<h1>Listing teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
      <th>Actives Subjects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.teacher_id %></td>
        <td><%= teacher.active_subjects %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_tag('/teachers', method: "GET") do %> 
<%= submit_tag :Amount, :name => "sort" %> 
<%= submit_tag :Name, :name => "sort"%> 

<% end %> 



<%= link_to 'New Teacher', new_teacher_path %>

